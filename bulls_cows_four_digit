# bulls and cows game, 4 digits

# randomize a number to guess
import random
a = random.randint(0,9)
b = random.randint(0,9)
c = random.randint(0,9)
x = random.randint(0,9)
rand_number = [a, b, c, x]
# print(rand_number)

# create variable "guess"
guess = 0

# start loop asking for a guess, reset right ans, cows, and bulls
while True:
    right_ans = [a, b, c, x]
    if guess == right_ans:
        print("You did it! That's the right number!")
    else:
        guess_before_list = str(input("guess a four digit number: "))
        guess = []
        for d in guess_before_list:
            guess.append(int(d))
        if len(guess) != 4:
            print("Wrong number of digits, try again.")
            continue
        bull = 0
        cows = 0

# check and print bull count, delete bulls if they are found
# start from position 3 and go down, so next positions aren't shifted if deleted
        if right_ans[3] == guess[3]:
            bull += 1
            right_ans.remove(right_ans[3])
            guess.remove(guess[3])
        
        if right_ans[2] == guess[2]:
            bull += 1
            right_ans.remove(right_ans[2])
            guess.remove(guess[2])
        
        if right_ans[1] == guess[1]:
            bull += 1
            right_ans.remove(right_ans[1])
            guess.remove(guess[1])
        
        if right_ans[0] == guess[0]:
            bull += 1
            right_ans.remove(right_ans[0])
            guess.remove(guess[0])
        
        print("Bulls:", bull)
        if bull == 4:
            print("You did it!")
            break

# check for cows, based on how many digits are left. Removes matched numbers from right_ans to avoid duplicate issues.
        
        # If guess length is 1, there will be no cows to add. 

        if len(guess) == 2:
            if guess[0] in right_ans:
                cows += 1
                right_ans.remove(guess[0])
            if guess[1] in right_ans and guess[1] != guess[0]:
                cows += 1
                right_ans.remove(guess[1])
        
        if len(guess) == 3:
            if guess[0] in right_ans:
                cows += 1 
                right_ans.remove(guess[0])
            if guess[1] in right_ans and guess[1] != guess[0]:
                cows += 1 
                right_ans.remove(guess[1])
            if guess[2] in right_ans and guess[2] != guess[0] and guess[2] != guess[1]:
                cows += 1
                right_ans.remove(guess[2])
                    
        if len(guess) == 4:
            if guess[0] in right_ans:
                cows += 1
                right_ans.remove(guess[0])
            if guess[1] in right_ans and guess[1] != guess[0]:
                cows += 1 
                right_ans.remove(guess[1])
            if guess[2] in right_ans and guess[2] != guess[0] and guess[2] != guess[1]:
                cows += 1 
                right_ans.remove(guess[2])
            if guess[3] in right_ans and guess[3] != guess[0] and guess[3] != guess[1] and guess[3] != guess[2]:
                cows += 1
                right_ans.remove(guess[3])
        print("Cows:", cows)
        print('')



# end of game         
print("end of game")
